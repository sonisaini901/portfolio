RewriteEngine On

# Redirect /index.php to /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/index\.php [NC]
RewriteRule ^index\.php$ / [R=301,L]

# Internally rewrite /something to /something.php if it exists
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Optional: Force trailing slash removal (e.g., /about/ → /about)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# /work → work.php
RewriteRule ^work/?$ work.php [L]

# /work/slug → work-single.php?slug=slug
RewriteRule ^work/([a-zA-Z0-9-]+)/?$ work-single.php?slug=$1 [L,QSA]